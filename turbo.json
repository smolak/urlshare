{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "LOG_LEVEL",
    "PORT",
    "VERCEL_URL",
    "GITHUB_ID",
    "GITHUB_SECRET",
    "FEED_QUEUE_API_KEY",
    "URL_QUEUE_API_KEY"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "test": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
